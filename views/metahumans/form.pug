form(action=(metahuman ? `/metahumans/update` : "/metahumans"), method="POST")
  if metahuman
    input(type="hidden", name="id", value=metahuman.id)

  .form-group
    label Alias
    input.form-control(name="metahuman[alias]", required, value=(metahuman ? metahuman.alias : null))

  .form-group
    label Fullname
    textarea.form-control(name="metahuman[fullName]", required)
      = metahuman ? metahuman.fullName : null

  .form-group
    label Affiliation
    textarea.form-control(name="metahuman[affiliation]", required)
      = metahuman ? metahuman.affiliation : null

  .form-group
    label Metatype
    select.form-control(name="metahuman[metatype]", required)
      each metatype in ['Superhero', 'Villian', 'Antihero']
        option(value=metatype, selected=(metahuman && metahuman.metatype === metatype))
          = metatype.toLowerCase()

  .form-group
    button.btn.btn-dark(type="submit") Submit